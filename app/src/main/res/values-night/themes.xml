<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Go4Lunch" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary and secondary colors. -->
        <item name="colorPrimary">@color/prim_red</item>
        <item name="colorPrimaryVariant">@color/second_red</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/prim_orange</item>
        <item name="colorSecondaryVariant">@color/second_orange</item>
        <item name="colorOnSecondary">@color/text_white</item>

        <!-- Background and surface colors. -->
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorSurface">@color/background_black</item>
        <item name="colorOnBackground">@color/text_white</item>
        <item name="colorOnSurface">@color/text_white</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/ToolbarStyle.Night</item>
    </style>

    <!-- Toolbar style for night mode -->
    <style name="ToolbarStyle.Night" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundColor">@color/prim_red</item>
        <item name="titleTextColor">@color/text_white</item>
    </style>
</resources>